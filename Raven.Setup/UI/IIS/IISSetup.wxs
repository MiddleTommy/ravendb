<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>

    <CustomAction Id="UpdateIISPropsWithSelectedWebSite" BinaryKey="Raven.Setup.CustomActions.CA.dll"
                  DllEntry="UpdateIISPropsWithSelectedWebSite" Execute="immediate"
                  Return="check" />

    <Property Id="CUSTOM_APPLICATION_POOL" Value="1" />
    <Property Id="WEBSITE" Value="1"/>
    <EnsureTable Id="ComboBox"/>
    
    <UI>
      <Dialog Id="IisSetupDlg" Width="370" Height="270" Title="[ProductName] Setup" NoMinimize="yes">
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back" />
        <Control Id="Next" Type="PushButton"  X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Condition Action="disable">WEBSITE_VD = ""</Condition>
          <Condition Action="enable"><![CDATA[WEBSITE_VD <> ""]]></Condition>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Please enter IIS configuration</Text>
        </Control>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}IIS settings</Text>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />

        <Control Id="WebSiteLabel" Type="Text" X="45" Y="73" Width="100" Height="15" TabSkip="no" Text="&amp;Web Site Name:" />
        <Control Id="SelectWebSiteComboBox" Type="ComboBox" X="45" Y="85" Width="220" Height="16"
                Property="WEBSITE" Sorted="yes" ComboList="yes" />
        <Control Id="VirtualDirLabel" Type="Text" X="45" Y="103" Width="100" Height="15" TabSkip="no" Text="&amp;Virtual Directory:" />
        <Control Id="VirtualDirEdit" Type="Edit" X="45" Y="115" Width="220" Height="18" Property="WEBSITE_VD" Text="{80}" />

        <Control Id="CustomAppPoolCheckBox" Type="CheckBox" X="45" Y="134" Width="250" Height="15" Property="CUSTOM_APPLICATION_POOL" CheckBoxValue="1" >
          <Text>Use a custom application pool instead of the web site default</Text>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>